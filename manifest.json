{
  "manifest_version": 3,
  "name": "Research Helper",
  "version": "1.0",
  "description": "Send selected text to a research webhook",
  "permissions": [
    "contextMenus",
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
} 